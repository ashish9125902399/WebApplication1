@model WebApplication1.Models.RegisterModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}
<style>
        
    .form-control {
        margin: auto;
    }

    .form-horizontal {
        height: 500px;
        width: 400px;
        margin: auto;
        margin-top:100px;
        text-align: center;
        background-color: white;
    }
</style>




@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


<div class="form-horizontal">
    <br />
    <div id="logo"><img src="~/Web Icons/Login.png" height="75" width="75" /><h2>Login</h2></div>   
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter Your Email-ID Or Username" } })
    @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
    <br />
    @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter Your Password" } })
    @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })

    <br />
    @Html.CheckBoxFor(model => model.Checkbx, new { htmlAttributes = new { @class = "form-control"} }) Remember me for login<br />
    <br />
    <input type="submit" value="Login" class="btn btn-default" style="color:white; font-weight:bold; font-size:large; height:40px; width:300px; background-color:forestgreen" />
    <br /><br />
    @Html.ActionLink("Forget Password", "ForgetPassword")
    <br /><br />Don't have an account?
    @Html.ActionLink("Create new one", "Register")
</div>

}

<div style="color:red; text-decoration:none">
    @Html.ActionLink("HOME", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
