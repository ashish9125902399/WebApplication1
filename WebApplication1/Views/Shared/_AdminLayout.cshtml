<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Admin Control</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body style="background-color:black; color:white;">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Admin Panel", "AdminHome", "Admin", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">



                    <li>@Html.ActionLink(User.Identity.Name, "AdminHome", "Admin")</li>

                    <li>@Html.ActionLink("Subject", "Subject", "Admin")</li>

                    <li>@Html.ActionLink("UserMgt", "UserMgt", "Admin")</li>

                    <li>@Html.ActionLink("Change Password", "ChangePassword", "Admin")</li>
                    <li>@Html.ActionLink("Notification", "Notification", "Admin")</li>
                    <li>@Html.ActionLink("Logout", "Logout", "Home")</li>




                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer style="background-color:black; color:white;">
            <p> Admin Control Panel</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>